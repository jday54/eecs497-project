{
  "manifest_version": 2,
  "name": "My Memorizer Tool",
  "version": "0.1.0.0",
  "permissions": [
    "storage",
    "contextMenus",
    "declarativeContent",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Memorizer",      
    "default_popup": "popup.html"        
  }
}
